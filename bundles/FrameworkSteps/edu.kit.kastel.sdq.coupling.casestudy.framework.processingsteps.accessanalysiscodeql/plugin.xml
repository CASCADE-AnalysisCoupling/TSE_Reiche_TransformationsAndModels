<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
<extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="edu.kit.kastel.sdq.casestudy.framework.processingsteps.accessanalysiscodeql.RunnerHandler"
            id="edu.kit.kastel.sdq.analysiscouplingframework.codeqlexample.commands.runConfig"
            name="Run Configuration">
      </command>
      <command
            defaultHandler="edu.kit.kastel.sdq.analysiscouplingframework.codeqlexample.iterative.IterativeRunnerHandler"
            id="edu.kit.kastel.sdq.analysiscouplingframework.codeqlexample.commands.runIterativeConfig"
            name="Run Configuration (iterative)">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <separator
               name="edu.kit.kastel.sdq.analysiscouplingframework.codeqlexample.beforeseparator"
               visible="true">
         </separator>
         <menu
               id="edu.kit.kastel.sdq.analysiscouplingframework.codeqlexample.menus.couplingFrameworkRunner"
               label="Coupling Framework for CodeQL"
               mnemonic="M">
            <command
                  commandId="edu.kit.kastel.sdq.analysiscouplingframework.codeqlexample.commands.runConfig"
                  id="edu.kit.kastel.sdq.analysiscouplingframework.codeqlexample.menus.couplingFrameworkRunner"
                  mnemonic="S"
                  tooltip="Runs the Coupling Framework for CodeQL with the selected config.xml file">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="activeMenuSelection">
                     <iterate>
                        <adapt
                              type="org.eclipse.core.resources.IResource">
                           <test
                                 property="org.eclipse.core.resources.name"
                                 value="CONFIG.xml">
                           </test>
                        </adapt>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
         <separator
               name="edu.kit.kastel.sdq.analysiscouplingframework.codeqlexample.afterseparator"
               visible="true">
         </separator>
      </menuContribution>
   </extension>
</plugin>
